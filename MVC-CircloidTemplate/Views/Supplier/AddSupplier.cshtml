
@{
	ViewBag.Title = "Tedarikçi Ekleme";
}


@using MVC_CircloidTemplate.Models

<div class="row">
	<div class="col-md-12">
		<div class="block">
			<div class="block-heading">
				<div class="main-text h2">
					Tedarikçi Ekleme Sayfası
				</div>
				<div class="block-controls">
					<a href="/Supplier/Index"> <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
					<span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
				</div>
			</div>
			<div class="block-content-outer">
				<div class="block-content-inner">
					<form action="/Supplier/AddSupplier" method="post" role="form">
						<div class="form-group">
							<label for="exampleInputEmail1">Şirket Adı: </label>
							<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Şirket adı giriniz" name="CompanyName">
						</div>
						<div class="form-group">
							<label for="exampleInputPassword1">Yetkili Kişi: </label>
							<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Yetkili kişi giriniz." name="ContactName">
						</div>

						<button type="submit" class="btn btn-primary">Kaydet</button>
					</form>
				</div>
			</div>
		</div>
	</div>

</div>